<h1>Tasks Index</h1>

<ul>
  <% @tasks.each do |t| %>
    <li>
      <%= link_to t.title, task_path(t) %>
      <p><%= t.completed%></p>
      <%= link_to 'destroy', delete_task_path(t), data: {turbo_method: 'delete', turbo_confirm: 'sure'} %>
    </li>
  <%end%>
</ul>

<%= link_to 'create new', new_task_path %>
